<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".StreamNDIVideoActivity">

    <de.daubli.ndimonitor.view.NdiVideoView
            android:id="@+id/ndiVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

    <de.daubli.ndimonitor.view.FramingHelperOverlayView
            android:id="@+id/framingHelperOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

    <!-- Floating action button, now anchored in bottom-end corner -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/regular_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:visibility="invisible"
            app:backgroundTint="@android:color/white"
            app:tint="#000"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>

</FrameLayout>
